body {
    font-family: 'Arial', sans-serif;
    background-color: #000; /* Fundo preto */
    color: #fff; /* Texto branco */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
}

h1 {
    font-size: 2.5em;
    margin-bottom: 20px;
}

p {
    font-size: 1.2em;
    margin-bottom: 40px;
    text-align: center;
    max-width: 600px;
}

button {
    background-color: #fe2c55; /* Cor do botão TikTok */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 15px 30px;
    font-size: 1.2em;
    cursor: pointer;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #f00; /* Cor do botão ao passar o mouse */
}
